{
  "name": "docker-testing-repo",
  "version": "0.1.0",
  "private": true,
  "proxy": {
    "/api": {
      "target": "http://backend:4000"
    }
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-transition-group": "^2.2.1",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "styled-components": "^2.2.3",
    "if-env": "^1.0.0",
    "react-scripts": "1.0.17"
  },
  "devDependencies": {
    "@storybook/addon-backgrounds": "^3.0.0",
    "@storybook/addon-centered": "^3.2.14",
    "@storybook/react": "^3.2.14",
    "eslint": "^4.10.0",
    "eslint-config-beanloop": "^0.1.0",
    "jest": "^21.2.1",
    "jest-cli": "^21.2.1",
    "jest-junit": "^3.3.0",
    "react-test-renderer": "^16.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "if-env NODE_ENV=production && react-scripts build || echo \"skip build in dev environment\"",
    "lint": "eslint ./src",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "react-scripts test --env=jsdom --testResultsProcessor ./node_modules/jest-junit",
    "eject": "react-scripts eject"
  },
  "jest-junit": {
    "output": "src/test-report.xml"
  }
}
